
CONFIGLOGGER_PROPERTIES:=alarm-config-logger.properties
CONFIGLOGGER_LOGGING_PROPERTIES:=alarm-config-logger_logging.properties


# All options are defined in AlarmConfigLoggingServer.java
# -h* does work
#
### Configuration / Topics
OPTIONS_CONFIGLOGGER:=-topics
OPTIONS_CONFIGLOGGER+=$(ALARM_CONFIG_TOPICS)
### Kafka Server (server, bootstrap.servers)
OPTIONS_CONFIGLOGGER+=-bootstrap.servers
OPTIONS_CONFIGLOGGER+=$(KFKA_URL)
### Settings / Properties for this service
OPTIONS_CONFIGLOGGER+=-properties
OPTIONS_CONFIGLOGGER+=$(INSTALL_LOCATION_CONFIGLOGGER)/$(CONFIGLOGGER_PROPERTIES)
### Logging properties
OPTIONS_CONFIGLOGGER+=-logging
OPTIONS_CONFIGLOGGER+=$(INSTALL_LOCATION_CONFIGLOGGER)/$(CONFIGLOGGER_LOGGING_PROPERTIES)
#
OPTIONS_CONFIGLOGGER+=-repo.location
OPTIONS_CONFIGLOGGER+=$(CONFIGLOGGER_REPO_LOCAL_LOCATION)
OPTIONS_CONFIGLOGGER+=-remote.location
OPTIONS_CONFIGLOGGER+=$(CONFIGLOGGER_REPO_REMOTE_LOCATION)
OPTIONS_CONFIGLOGGER+=-username 
OPTIONS_CONFIGLOGGER+=$(CONFIGLOGGER_REPO_USERNAME)
OPTIONS_CONFIGLOGGER+=-password
OPTIONS_CONFIGLOGGER+=$(CONFIGLOGGER_REPO_PASSWORD)

