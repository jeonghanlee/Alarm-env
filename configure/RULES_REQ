# -*- mode: Makefile;-*-


.PHONY: depedencies-build save-and-restore-build
# Phoebus doesn't own phoebus.org, so we cannot download Phoebus snapshot from sonatype,
# So, it is mandatory to build Phoebus first, before we build any of Alarm services.

# dependencies_build is the minimum modules, which we need to build the alarm trio.
depedencies-build:
	$(QUIET) mvn -f $(SRC_ROOT)/pom.xml clean install -Dmaven.test.skip=true -Dmaven.javadoc.skip=true --projects core,app --also-make
	$(QUIET) mvn -f $(SRC_ROOT)/core/pom.xml clean install -Dmaven.test.skip=true -Dmaven.javadoc.skip=true --also-make 
	$(QUIET) mvn -f $(SRC_ROOT)/app/pom.xml clean install -Dmaven.test.skip=true -Dmaven.javadoc.skip=true --projects alarm --also-make 
	$(QUIET) mvn -f $(SRC_ROOT)/app/alarm/pom.xml clean install -Dmaven.test.skip=true -Dmaven.javadoc.skip=true --projects model --also-make 

# Potential extension for near future. 
save-and-restore-build:
	$(QUIET) mvn -f $(SRC_ROOT)/app/pom.xml clean install -Dmaven.test.skip=true -Dmaven.javadoc.skip=true --projects save-and-restore --also-make  

