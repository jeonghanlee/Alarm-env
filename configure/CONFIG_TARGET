
TARGET_NAME_PHOEBUS:= phoebus
TARGET_NAME_SERVER := alarm-server
TARGET_NAME_LOGGER := alarm-logger
TARGET_NAME_CONFIGLOGGER := alarm-config-logger



TARGET_NAMES:=$(sort $(filter TARGET_NAME_%, $(.VARIABLES)))

#
#
#
INSTALL_LOCATION_PHOEBUS:=$(PS_INSTALL_LOCATION)/$(TARGET_NAME_PHOEBUS)
INSTALL_LOCATION_SERVER:=$(PS_INSTALL_LOCATION)/$(TARGET_NAME_SERVER)
INSTALL_LOCATION_LOGGER:=$(PS_INSTALL_LOCATION)/$(TARGET_NAME_LOGGER)
INSTALL_LOCATION_CONFIGLOGGER:=$(PS_INSTALL_LOCATION)/$(TARGET_NAME_CONFIGLOGGER)

INSTALL_FILENAME_PHOEBUS:=$(TARGET_NAME_PHOEBUS).jar
INSTALL_FILENAME_SERVER:=$(TARGET_NAME_SERVER).jar
INSTALL_FILENAME_LOGGER:=$(TARGET_NAME_LOGGER).jar
INSTALL_FILENAME_CONFIGLOGGER:=$(TARGET_NAME_CONFIGLOGGER).jar

INSTALL_PHOEBUS:=$(INSTALL_LOCATION_PHOEBUS)/$(INSTALL_FILENAME_PHOEBUS)
INSTALL_SERVER:=$(INSTALL_LOCATION_SERVER)/$(INSTALL_FILENAME_SERVER)
INSTALL_LOGGER:=$(INSTALL_LOCATION_LOGGER)/$(INSTALL_FILENAME_LOGGER)
INSTALL_CONFIGLOGGER:=$(INSTALL_LOCATION_CONFIGLOGGER)/$(INSTALL_FILENAME_CONFIGLOGGER)


INSTALL_LOCATION_NAMES:=$(sort $(filter INSTALL_LOCATION_%, $(.VARIABLES)))

INSTALL_LOCATIONS:=$(foreach v, $(INSTALL_LOCATION_NAMES),$($(v)))
SYSTEMD_FILENAMES:=$(addsuffix .service, $(foreach v, $(TARGET_NAMES), $($(v))))
INSTALL_FILENAMES:=$(addsuffix .jar, $(foreach v, $(TARGET_NAMES), $($(v))))


VARS_EXCLUDES+=TARGET_NAMES
VARS_EXCLUDES+=TARGET_NAME_%
VARS_EXCLUDES+=INSTALL_LOCATION_%
VARS_EXCLUDES+=INSTALL_FILENAME_%
VARS_EXCLUDES+=INSTALL_SERVER
VARS_EXCLUDES+=INSTALL_LOGGER
VARS_EXCLUDES+=INSTALL_CONFIGLOGGER
